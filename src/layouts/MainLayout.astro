---
import "../styles/global.css";
import Navbar from "../component/Navbar.astro";
import Footer from "../component/Footer.astro";
const { title } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <link rel="canonical" href="https://mikoprm.pages.dev/" />
    <meta
      name="description"
      content="Hi, hello there! My name is Miko. I like learning new things from other professionals, Always fun to learn new things and grow over time to open up new opportunities and better chances."
    />
    <meta name="keywords" content="Miko, Mikoprm, Mikoprm - Developer" />
    <meta name="author" content="Miko" />
    <!-- Open Graph  -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://mikoprm.pages.dev/" />
    <meta property="og:title" content="Mikoprm" />
    <meta
      property="og:description"
      content="Hi, hello there! My name is Miko. I like learning new things from other professionals,Always fun to learn new things and grow over time to open up new opportunities and better chances."
    />
    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content="https://x.com/mikoprm" />
    <meta property="twitter:title" content="Mikoprm" />
    <meta
      property="twitter:description"
      content="Hi, hello there! My name is Miko. I like learning new things from other professionals, Always fun to learn new things and grow over time to open up new opportunities and better chances."
    />
    <!-- Robots -->
    <meta name="robots" content="index, follow" />
  </head>
  <body>
    <div class="wrapper-body">
      <Navbar />
      <main class="wrapper-primary main">
        <slot />
      </main>
      <Footer />
    </div>
    <script>
      import "../js/script.js";
    </script>
  </body>
</html>
