<header class="header">
  <nav class="wrapper-primary nav">
    <a href="/" class="nav__logo" title="Back to Home"
      >Miik<img src="/smile.svg" alt="logo img" />
    </a>
    <menu class="nav__menu">
      <li><a href="/" class="nav__link">Home</a></li>
      <li><a href="/project" class="nav__link">Projects & Source Code</a></li>
      <li><a href="/design" class="nav__link">Web Design</a></li>
      <li><a href="/contact" class="nav__link">Contact</a></li>
    </menu>

    <div class="nav__mobile-btn">
      <img
        src="/menuBtn.svg"
        alt="Menu button"
        width="28px"
        height="26px"
        loading="lazy"
        decoding="async"
      />
    </div>
  </nav>
</header>

<style>
  .header {
    width: 100%;
    position: fixed;
    top: 0;
    left: 0;
    color: var(--light);
    backdrop-filter: blur(var(--size-small-base));
    transition: var(--transition);
    z-index: 9999;
  }

  .header-hidden {
    transform: translateY(calc(-1 * var(--clamp-5-xl)));
  }

  .header-scrolled {
    background-color: var(--dark);
  }

  .nav {
    display: flex;
    justify-content: space-between;
    align-items: center;
    height: var(--clamp-5-xl);
    border-bottom: var(--border-dark);
  }

  .nav__logo {
    font-size: var(--size-2-base);
    font-weight: var(--fw-medium);
    display: flex;
    justify-content: center;
    align-items: center;
    color: var(--link-color);
  }

  .nav__logo img {
    width: var(--clamp-2-base);
    height: var(--clamp-2-base);
  }

  .nav__logo:hover,
  .nav__logo:focus-visible {
    text-decoration: none;
    opacity: var(--opacity);
  }

  .nav__menu {
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: clamp(0rem, 3vw, var(--size-3-base));
  }

  .nav__link {
    color: var(--light-accent);
    transition: var(--transition);
  }

  .nav__link:hover,
  .nav__link:focus-visible {
    color: var(--link-color);
    text-decoration: underline;
    text-underline-offset: var(--size-x-small);
  }

  .nav__mobile-btn {
    display: none;
    cursor: pointer;
  }

  /* tablet 600px  */
  @media (max-width: 37.5em) {
    .nav__mobile-btn {
      display: block;
      padding: var(--size-xx-small);
      border-radius: var(--size-xx-small);
      background-image: var(--gradient-primary);
    }

    .nav__menu {
      position: fixed;
      width: 80%;
      top: var(--clamp-5-xl);
      right: 0;
      flex-direction: column;
      justify-content: start;
      min-height: 100dvh;
      transition: var(--transition);
      transform: translateX(100%);
      background-image: var(--gradient-primary);
      z-index: -1;
    }

    .nav__menu.active {
      transform: translateX(0%);
    }

    .nav__menu li {
      width: 100%;
    }

    .nav__link {
      display: block;
      font-weight: var(--fw-medium);
      padding-block: 1em;
      text-align: center;
    }
  }
</style>
