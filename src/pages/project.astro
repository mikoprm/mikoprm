---
import reanalyst from "../assets/reanalyst.webp";
import reset from "../assets/css-reset.webp";
import desigline from "../assets/desigline.webp";
import themesxyz from "../assets/themesxyz.webp";
import sobasic from "../assets/sobasic.webp";
import starlight from "../assets/starlight.webp";
import blogxyz from "../assets/blogxyz.webp";
import jrhythm from "../assets/jrhythm.webp";
import michelle from "../assets/michelle.webp";
import wireframe1 from "../assets/wireframe-1.webp";
import emilyui from "../assets/emilyui.webp";
import devxyz from "../assets/devxyz-portfolio.webp";
import accordion2 from "../assets/accordion2.webp";
import accordion from "../assets/accordion.webp";
import navbar from "../assets/navbar.webp";
import photography from "../assets/photography-website.webp";
import { Image } from "astro:assets";
import MainLayout from "../layouts/MainLayout.astro";
import "../styles/global.css";
---

<MainLayout title="Miko - Project">
  <section aria-labelledby="project">
    <div class="wrapper-contents article__contents-wrapper">
      <h2 class="h1 heading-primary" id="project">
        Resent Projects & Source Code
      </h2>
      <section aria-labelledby="view" class="tab__heading">
        <h3 id="view">Tab to view</h3>
        <ul class="project__tabs">
          <li>
            <button data-tab-target="#landingPage" class="tag-name active"
              >Landing Page</button
            >
          </li>
          <li>
            <button data-tab-target="#basic" class="tag-name"
              >HTML, CSS, JS</button
            >
          </li>
          <li>
            <button data-tab-target="#astro" class="tag-name">Astro JS</button>
          </li>
          <li>
            <button data-tab-target="#react" class="tag-name">React JS</button>
          </li>
          <li>
            <button data-tab-target="#others" class="tag-name">Others</button>
          </li>
        </ul>
      </section>
      <div class="tab__contents">
        <div data-tab-content id="landingPage" class="active">
          <article class="article__content">
            <Image
              src={desigline}
              alt="Desigline website image"
              class="article__img"
            />
            <aside class="article__description">
              <h3>Desigline Website</h3>
              <p>
                In this project i create a Simple responsive personal portfolio
                for Visual Designer with dark/light themes. Build with HTML,
                CSS, Javascript. Web design inspired by : <a
                  href="https://www.figma.com/community/file/1095695980466714349/portfolio-template-edit-this-portfolio-and-export-it-as-html-get-your-portfolio-live-in-no-time"
                  target="_blank"
                  class="link">figma.com/@anima</a
                >
              </p>
              <div class="article__links">
                <a
                  href="https://mikoprm.github.io/desigline/"
                  target="_blank"
                  class="button button-primary">View Live Demo</a
                >
                <a
                  href="https://github.com/mikoprm/desigline"
                  target="_blank"
                  class="button">Source Code</a
                >
              </div>
            </aside>
          </article>
          <article class="article__content">
            <Image
              src={michelle}
              alt="michelle website image"
              class="article__img"
            />
            <aside class="article__description">
              <h3>Michelle Young Portfolio</h3>
              <p>
                In this project i create a simple responsive portfolio website,
                with dark/light theme with Astro Js, a modern web framework,
                primarily focused on building fast and efficient content-driven
                websites.
              </p>
              <div class="article__links">
                <a
                  href="https://michelle-young.vercel.app/"
                  target="_blank"
                  class="button button-primary">View Live Demo</a
                >
                <a
                  href="https://github.com/mikoprn/michelle-young"
                  target="_blank"
                  class="button">Source Code</a
                >
              </div>
            </aside>
          </article>
          <article class="article__content">
            <Image src={emilyui} alt="EmilyUi portfolio" class="article__img" />
            <aside class="article__description">
              <h3>EmilyUi Portfolio</h3>
              <p>
                In this project i create a simple responsive portfolio website
                with HTML CSS JS & Vite Js, with dark/light theme. The website
                will also remember the theme so that the stored theme will be
                used when the user refreshes or returns to the website after a
                few days.
              </p>
              <div class="article__links">
                <a
                  href="https://emilyui.vercel.app/"
                  target="_blank"
                  class="button button-primary">View Live Demo</a
                >
                <a
                  href="https://github.com/mikoprn/EmilyUi"
                  target="_blank"
                  class="button">Source Code</a
                >
              </div>
            </aside>
          </article>
          <article class="article__content">
            <Image src={devxyz} alt="Devxyz portfolio" class="article__img" />
            <aside class="article__description">
              <h3>Devxyz Portfolio</h3>
              <p>
                In this project i made a static responsive website with HTML CSS
                JS & Vite Js.
              </p>
              <div class="article__links">
                <a
                  href="https://devxyz.vercel.app/"
                  target="_blank"
                  class="button button-primary">View Live Demo</a
                >
                <a
                  href="https://github.com/Mikoprn/Devxyz"
                  target="_blank"
                  class="button">Source Code</a
                >
              </div>
            </aside>
          </article>
          <article class="article__content">
            <Image
              src={photography}
              alt="photography website image"
              class="article__img"
            />
            <aside class="article__description">
              <h3>Photography Responsive Website</h3>
              <p>
                In this project i made a static responsive landing page
                photography website with HTML CSS JS.
              </p>
              <div class="article__links">
                <a
                  href="https://photography--website.pages.dev/"
                  target="_blank"
                  class="button button-primary">View Live Demo</a
                >
                <a
                  href="https://github.com/Mikoprn/Photography--website"
                  target="_blank"
                  class="button">Source Code</a
                >
              </div>
            </aside>
          </article>
        </div>
        <div data-tab-content id="basic">
          <article class="article__content">
            <Image
              src={reset}
              alt="Responsive navigation bar"
              class="article__img"
            />
            <aside class="article__description">
              <h3>CSS reset</h3>
              <p>
                I created a CSS reset to make it easier to start with basic
                styles according to the needs of various projects.
              </p>
              <div class="article__links">
                <a
                  href="https://mikoprn.github.io/css-reset/"
                  target="_blank"
                  class="button button-primary">View Live Demo</a
                >
                <a
                  href="https://github.com/mikoprn/css-reset"
                  target="_blank"
                  class="button">Source Code</a
                >
              </div>
            </aside>
          </article>
          <article class="article__content">
            <Image
              src={themesxyz}
              alt="Responsive navigation bar"
              class="article__img"
            />
            <aside class="article__description">
              <h3>Dark/light Themes</h3>
              <p>
                In this project i'm trying to make dark/light themes without
                flicker for website with HTML, CSS, Javascript.
              </p>
              <div class="article__links">
                <a
                  href="https://themesxyz.vercel.app/"
                  target="_blank"
                  class="button button-primary">View Live Demo</a
                >
                <a
                  href="https://github.com/mikoprn/themesxyz"
                  target="_blank"
                  class="button">Source Code</a
                >
              </div>
            </aside>
          </article>
          <article class="article__content">
            <Image
              src={navbar}
              alt="Responsive navigation bar"
              class="article__img"
            />
            <aside class="article__description">
              <h3>Responsive Navigation Bar</h3>
              <p>
                In this project i made a responsive navigation with HTML CSS &
                JS, with menu slide below header/navbar.
              </p>
              <div class="article__links">
                <a
                  href="https://mikoprn.github.io/Resnav/"
                  target="_blank"
                  class="button button-primary">View Live Demo</a
                >
                <a
                  href="https://github.com/Mikoprn/Resnav"
                  target="_blank"
                  class="button">Source Code</a
                >
              </div>
            </aside>
          </article>
          <article class="article__content">
            <Image src={accordion} alt="Accordion FAQ" class="article__img" />
            <aside class="article__description">
              <h3>Accordion FAQ</h3>
              <p>
                In this project i made a simple Accordion FAQ using HTML CSS &
                JavaScript.
              </p>
              <div class="article__links">
                <a
                  href="https://mikoprn.github.io/Accordion/"
                  target="_blank"
                  class="button button-primary">View Live Demo</a
                >
                <a
                  href="https://github.com/Mikoprn/Accordion"
                  target="_blank"
                  class="button">Source Code</a
                >
              </div>
            </aside>
          </article>
          <article class="article__content">
            <Image src={accordion2} alt="Accordion FAQ" class="article__img" />
            <aside class="article__description">
              <h3>Accordion FAQ Style 2</h3>
              <p>
                In this project i made a simple Accordion FAQ with first
                question open using HTML CSS & JavaScript.
              </p>
              <div class="article__links">
                <a
                  href="https://mikoprn.github.io/Accordion-2/"
                  target="_blank"
                  class="button button-primary">View Live Demo</a
                >
                <a
                  href="https://github.com/Mikoprn/Accordion-2"
                  target="_blank"
                  class="button">Source Code</a
                >
              </div>
            </aside>
          </article>
        </div>
        <div data-tab-content id="astro">
          <article class="article__content">
            <Image
              src={blogxyz}
              alt="blogxyz website image"
              class="article__img"
            />
            <aside class="article__description">
              <h3>Blogxyz-astro</h3>
              <p>
                This project is a continuation of James Rhythm Blog. In this
                project i create a simple responsive blog website, with
                dark/light theme with Astro Js version 5, based on Astro Js docs
                tutorial build blog using Content Collection.
              </p>
              <div class="article__links">
                <a
                  href="https://blogxyz-astro.vercel.app/"
                  target="_blank"
                  class="button button-primary">View Live Demo</a
                >
                <a
                  href="https://github.com/mikoprn/blogxyz-astro"
                  target="_blank"
                  class="button">Source Code</a
                >
              </div>
            </aside>
          </article>
          <article class="article__content">
            <Image
              src={jrhythm}
              alt="jrhythm website image"
              class="article__img"
            />
            <aside class="article__description">
              <h3>James Rhythm Blog</h3>
              <p>
                In this project i create a simple responsive blog website, with
                dark/light theme with Astro Js version 5, based on Asto Js docs
                tutorial build blog without using Content Collection. The
                content inside the blog is based on James Q Quick tutorial build
                blog at youtube.
              </p>
              <div class="article__links">
                <a
                  href="https://jrhythm.vercel.app/"
                  target="_blank"
                  class="button button-primary">View Live Demo</a
                >
                <a
                  href="https://github.com/mikoprn/jrhythm"
                  target="_blank"
                  class="button">Source Code</a
                >
              </div>
            </aside>
          </article>
          <article class="article__content">
            <Image
              src={starlight}
              alt="starlight website image"
              class="article__img"
            />
            <aside class="article__description">
              <h3>Starlight Documentation Website</h3>
              <p>
                Cool website from Astro themes : Starlight is a full-featured,
                eco-friendly, accessible-by-default documentation theme built on
                Astro. Everything you need to build a stellar documentation
                website. Fast, accessible, and easy-to-use. Here is the link : <a
                  href="https://astro.build/themes/details/starlight/"
                  target="_blank"
                  class="link">Starlight</a
                >
              </p>
              <div class="article__links">
                <a
                  href="https://starlight.astro.build/"
                  target="_blank"
                  class="button button-primary">View Live Demo</a
                >
                <a
                  href="https://github.com/withastro/starlight"
                  target="_blank"
                  class="button">Source Code</a
                >
              </div>
            </aside>
          </article>
          <article class="article__content">
            <Image
              src={sobasic}
              alt="Sobasic template website"
              class="article__img"
            />
            <aside class="article__description">
              <h3>So Basic - Template</h3>
              <p>
                A cool website from Astro JS themes. So Basic is perfect for
                your personal or professional blog. You can focus on writing
                your content, So Basic will take care of displaying it in a
                clean, minimal way. Readers will be delighted. Here is the link
                : <a
                  href="https://astro.build/themes/details/so-basic-blog-template/"
                  target="_blank"
                  class="link">So Basic - Blog Template</a
                >
              </p>
              <div class="article__links">
                <a
                  href="https://sobasic.netlify.app/"
                  target="_blank"
                  class="button button-primary">View Live Demo</a
                >
                <a
                  href="https://github.com/lukeska/sobasic"
                  target="_blank"
                  class="button">Source Code</a
                >
              </div>
            </aside>
          </article>
        </div>
        <div data-tab-content id="react">
          <article class="article__content">
        <Image
          src={reanalyst}
          alt="reanalyst website image"
          class="article__img"
        />
        <aside class="article__description">
          <h3>Reanalyst Portfolio</h3>
          <p>
            This project i build with React JS 19, a simple responsive portfolio
            website for professional Business and Data Analyst with dark/light
            theme.
          </p>
          <div class="article__links">
            <a
              href="https://reanalyst.vercel.app/"
              target="_blank"
              class="button button-primary">View Live Demo</a
            >
            <a
              href="https://github.com/mikoprm/reanalyst"
              target="_blank"
              class="button">Source Code</a
            >
          </div>
        </aside>
      </article>
        </div>
        <div data-tab-content id="others">
          <article class="article__content">
            <Image
              src={wireframe1}
              alt="Wireframe 1 template website"
              class="article__img"
            />
            <aside class="article__description">
              <h3>Wireframe template website</h3>
              <p>
                Wireframe template website HTML CSS JS, with dark / light theme
                toggle. The website will also remember the theme so that the
                stored theme will be used when the user refreshes or returns to
                the website after a few days.
              </p>
              <div class="article__links">
                <a
                  href="https://wireframe-1.vercel.app/"
                  target="_blank"
                  class="button button-primary">View Live Demo</a
                >
                <a
                  href="https://github.com/mikoprn/wireframe-1"
                  target="_blank"
                  class="button">Source Code</a
                >
              </div>
            </aside>
          </article>
        </div>
      </div>
    </div>
  </section>
</MainLayout>

<style>
  .tab__heading h3 {
    width: fit-content;
    border-bottom: var(--border-light);
    border-width: var(--size-xx-small);
    border-color: var(--link-color);
    border-image: var(--gradient) 1 0%;
  }

  .project__tabs {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    gap: var(--clamp-base);
    margin-block: var(--clamp-base) var(--clamp-5-base);
  }

  .active[data-tab-target] {
    color: var(--dark-base);
    background-color: var(--accent-color);
  }

  [data-tab-content] {
    display: none;
    opacity: 0;
  }

  .active[data-tab-content] {
    display: block;
    opacity: 1;
    animation: var(--animationPrimary);
  }
</style>

