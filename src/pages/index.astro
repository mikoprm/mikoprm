<style>
  .home {
    max-width: 56.25rem;
    margin-inline: auto;
    display: grid;
    gap: var(--clamp-2-base);
  }

  h1 span {
    font-size: var(--clamp-4-base);
    font-weight: var(--fw-bold);
  }

  small {
    display: block;
    width: fit-content;
    margin-inline: auto;
    padding: 0.25em 1.5em;
    border-radius: var(--size-3-base);
    border: var(--border-dark);
  }

  h2 {
    width: fit-content;
    text-align: left;
    border-bottom: var(--border-light);
    border-width: var(--size-xx-small);
    border-color: var(--link-color);
    border-image: var(--gradient) 1 0%;
  }

  .about__content {
    display: flex;
    align-items: start;
    gap: var(--clamp-5-base);
  }

  .about__img {
    width: clamp(12.5rem, 10.5978rem + 10.8696vw, 18.75rem);
    border-radius: var(--size-x-small);
    pointer-events: none;
    user-select: none;
  }

  .about__content article {
    max-width: 43.75rem;
    display: grid;
    gap: var(--clamp-2-base);
  }

  .about__content article h3 {
    margin-top: var(--size-2-base);
  }

  .skills {
    display: grid;
    place-items: center;
    gap: var(--clamp-3-base);
  }

  .skills h3 {
    font-size: var(--clamp-2-l);
  }

  .skills__images {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    align-items: center;
    gap: var(--clamp-base) var(--clamp-3-base);
  }

  .skills li img {
    width: 100%;
    height: clamp(2.25rem, 2.179rem + 0.357vw, 2.5rem);
  }

  .services__wrapper {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: var(--clamp-5-base);
  }

  .services__content {
    width: clamp(17.5rem, 45vw, 34.375rem);
    border: var(--border-dark);
    padding: 1.5em;
    border-radius: var(--size-x-small);
    transition: var(--transition);
  }

  .services__content:is(:hover, :focus-visible) {
    background-color: var(--dark-accent);
  }

  .services__content h3 {
    font-size: var(--clamp-2-l);
  }

  .services__content p {
    margin-top: var(--size-small-l);
  }

  .works__projects-link {
    display: inline-block;
    font-size: var(--text-size);
  }

  /* 700px */
  @media (max-width: 43.75em) {
    .about__content,
    .services__wrapper {
      flex-direction: column;
      align-items: center;
    }

    .services__content {
      width: 100%;
      padding: 1em;
    }
  }

  /* 425px */
  @media (max-width: 26.563em) {
    .contact__email {
      margin-inline: auto;
    }
  }
</style>
